# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENV=sandbox

# Product Configuration
PRODUCT_PRICE=9.99
CURRENCY=USD

# SMTP Configuration (for automatic email delivery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM="Your App <noreply@yourdomain.com>"

# Optional: Remote license validation endpoint (preferred)
# Example: https://budget-xt.vercel.app/api/validate-key
KEYS_VALIDATE_URL=https://budget-xt.vercel.app/api/validate-key

# Optional: Remote license keys JSON endpoint (fallback)
# Example formats:
#   { "keys": ["BBT1.AAAAAAAA.BBBBBBBB", "BBT1.CCCCCCCC.DDDDDDDD"] }
#   ["BBT1.AAAAAAAA.BBBBBBBB", "BBT1.CCCCCCCC.DDDDDDDD"]
KEYS_REMOTE_URL=

# Optional: Local license keys JSON file path (alternative to remote URL)
# Example: C:\\Users\\Terry\\Desktop\\BudgetXT\\backend\\keys.json
KEYS_LOCAL_PATH=

# Server
PORT=3000
